<Window x:Class="WPFkalapacs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFkalapacs"
        mc:Ignorable="d"
        Title="London 2012 – Férfi kalapácsvetés – selejtező" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <Label Content="Válasszon versenyzőt!" Margin="0 10"/>
            <ComboBox x:Name="athleteComboBox" Width="330"  Height="50" SelectionChanged="athleteComboBox_SelectionChanged"/>
            <Label x:Name="csoportLabel" Margin="0 10"/>
            <Label x:Name="nemzetLabel" Margin="0 10"/>
            <Label x:Name="nemzetKodLabel" Margin="0 10"/>
            <Label x:Name="sorozatLabel" Margin="0 10"/>
            <Label x:Name="eredmenyLabel" Margin="0 10"/>
            <Image x:Name="imgZaszlo" Source="Images/HUN.png" Margin="0 10" Height="100" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
